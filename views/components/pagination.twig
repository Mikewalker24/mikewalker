<div class="pagination">
  {% if posts.pagination.next %}
    <a href="{{ posts.pagination.next.link }}" class="next {{ posts.pagination.next.link|length ? '' : 'invisible' }} pagination-link">
      Previous
    </a>
    {% else %}
    <div class="empty"></div>
  {% endif %}
  {% if posts.pagination.prev %}
    <a href="{{ posts.pagination.prev.link }}" class="prev {{ posts.pagination.prev.link|length ? '' : 'invisible' }} pagination-link">
      Next
    </a>
    {% else %}
  {% endif %}
</div>